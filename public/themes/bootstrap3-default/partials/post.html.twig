<div class="col-sm-12 col-md-12 col-lg-4 post--Img slide-left">
    <a href="/{{ post.getCategory() }}/@{{ post.author }}/{{ post.permlink }}">
        <div class="post--Cover" style="background-image: url({{ post.image }})">
        </div>
    </a>
</div>

<div class="col-sm-12 col-md-12 col-lg-8 post--Header">
    <a href="/{{ post.getCategory() }}/@{{ post.author }}/{{ post.permlink }}">
        <h2 class="post--Title">
            {{ post.title }}
        </h2>
    </a>

    <div class="post--ActionsContainer">
        <div class="post--Actions">

            {% if display.element("payout") %}
            <div class="amount--Earned">
                $ {{ post.total_payout_value }}
            </div>
            {% endif %}

            <div class="post--Numbers">
                {% if display.element("votes") %}
                <div class="upvote--Icon">
                    <span>{{ post.active_votes | length }}</span>
                </div>
                {% endif %}
                {% if display.element("comments") %}
                <div class="comment--Icon">
                    <span> {{ post.children }}</span>
                </div>
                {% endif %}
            </div>
        </div>

        <div class="post--Meta">
            {{ "%datetime%" | trans({'%datetime%' : post.ts | date("d M Y")})}}
            {% if display.element("author") %}
                by <a href="/@{{ post.author }}">{{ post.author }}</a>
            {% endif %}
            {% if display.element("category") %}
                in <a href="/tagged/{{ post.category }}">{{ post.category }}</a>
            {% endif %}
        </div>

        <span class="line"></span>
    </div>
</div>

<div class="col-sm-12 col-md-12 col-lg-8 col-lg-offset-4 post-preview post--Excerpt">
    {% if preview is defined %}
      {{ post.html_preview | raw }}
    {% else %}
    {{ post.html | raw }}
    {% endif %}

    <a href="/{{ post.getCategory() }}/@{{ post.author }}/{{ post.permlink }}" class="continue--ReadingButton">
      {{ 'Read more...' | trans }}
    </a>
    <span class="line"></span>

</div>
